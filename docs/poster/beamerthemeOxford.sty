\definecolor{lightgrey}{rgb}{0.95,0.95,0.95} % Defines the color used for content box headers
\definecolor{bluetinge}{rgb}{0.9,0.95,1}
\definecolor{oxfordblue}{RGB}{0,33,71} % Pantone 282, Hex #002147, RGB 0 33 71, CMYK 100 80 0 60
\definecolor{oxfordlightblue}{RGB}{0,82,163}
\definecolor{darkgreen}{rgb}{0,.4,0}
\definecolor{darkgrey}{RGB}{36,36,36}

\setbeamercolor{headline}{fg=oxfordblue,bg=oxfordblue}
\setbeamercolor{footline}{fg=oxfordblue,bg=white}
\setbeamerfont{footline}{size=\large,series=\ttfamily}
\setbeamercolor{separation line}{bg=white}
\setbeamercolor{title in headline}{fg=white}
\setbeamercolor{author in headline}{fg=white}
\setbeamercolor{institute in headline}{fg=white}

\setbeamercolor{framesubtitle}{fg=white, bg=oxfordblue}
\setbeamercolor{author in head/foot}{fg=white, bg=oxfordblue}
\setbeamercolor{title in head/foot}{fg=white, bg=oxfordblue}

\setbeamercolor*{normal text}{fg=black, bg=white}
\setbeamercolor*{block body}{bg=lightgrey,fg=oxfordblue}
\setbeamercolor*{block title}{fg=white,bg=oxfordblue}
\setbeamerfont{block title}{size=\large,series=\bfseries}
\setbeamercolor{upper separation line head}{fg=white, bg=oxfordblue}

\setbeamercolor*{example body}{fg=lightgrey,bg=oxfordblue}
\setbeamercolor*{example text}{fg=lightgrey,bg=oxfordblue}
\setbeamercolor*{example title}{bg=white,fg=ta2gray}

%\setbeamercolor{alerted text}{fg=ta3gray}

%\setbeamercolor{example text}{fg=taorange}
\setbeamercolor{structure}{fg=oxfordblue}

\setbeamertemplate{itemize items}[triangle]
\setbeamertemplate{navigation symbols}{}  % no navigation on a poster

\setbeamertemplate{theorems}[numbered]
\setbeamertemplate{theorem begin}{%
  {
    \vskip 1cm
    \inserttheoremheadfont
    \textbf{\textup{\inserttheoremname \inserttheoremnumber\inserttheorempunctuation}}
    \ifx\inserttheoremaddition\@empty\else\textup{(\inserttheoremaddition)}\fi%
    \space% new
  }%
}

\setbeamertemplate{theorem end}{
  \vskip 1cm
}

\defbeamertemplate{block begin}{notitle} {
  \vskip.5ex
  \usebeamerfont{block body}
  \begin{beamercolorbox}[leftskip=10pt,colsep*=.75ex,sep=0.5ex,vmode]{block body}
    \justifying
    \ifbeamercolorempty[bg]{block body}{\vskip-.25ex}{\vskip-.75ex}\vbox{}
  }
  \setbeamertemplate{block end}{
  \end{beamercolorbox}
}

